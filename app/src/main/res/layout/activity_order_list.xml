<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical"
    tools:context="cn.v1.kanglewanjia.ui.inquiry_order.OrderListActivity">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="60dp"
        android:focusable="false"
        android:text="问诊订单"
        android:textColor="@color/family_doctor_title"
        android:textSize="26sp" />

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_all_orders"
            android:layout_width="106dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_order_focused"
            android:focusable="true"
            android:gravity="center"
            android:text="全部订单"
            android:textColor="@color/family_doctor_title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_serviced_order"
            android:layout_width="106dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/selector_order_focused"
            android:focusable="true"
            android:gravity="center"
            android:text="已服务订单"
            android:textColor="@color/family_doctor_title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_canceled_order"
            android:layout_width="106dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/selector_order_focused"
            android:focusable="true"
            android:gravity="center"
            android:text="已取消订单"
            android:textColor="@color/family_doctor_title"
            android:textSize="18sp" />

    </LinearLayout>

    <cn.v1.kanglewanjia.view.CustomRecycleView
        android:id="@+id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="466dp"
        android:layout_below="@+id/ll_tab"
        android:layout_marginTop="41dp"
        android:clipToPadding="false"
        android:focusable="false"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        />

    <TextView
        android:id="@+id/tv_focuesd_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:focusable="false"
        android:text="(1/11)"
        android:textColor="#9ABEF4"
        android:textSize="12sp" />

</RelativeLayout>

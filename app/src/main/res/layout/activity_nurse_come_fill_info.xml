<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="80dp"
    android:clipToPadding="false"
    tools:context="cn.v1.kanglewanjia.ui.nurse_order.NurseComeFillInfoActivity">


    <LinearLayout
        android:layout_width="1120dp"
        android:layout_height="1250dp"
        android:orientation="vertical"
        android:background="@drawable/medical_test_order_bg"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/nurse_come_fill_info"
            />
        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="200dp"
            android:layout_height="58dp"
            android:layout_marginTop="66dp"
            android:layout_marginBottom="77dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/selector_dialog_button"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:focusable="true"
            />

    </LinearLayout>

</ScrollView>

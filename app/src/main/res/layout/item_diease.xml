<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="246dp"
    android:layout_height="233dp"
    android:layout_marginRight="26dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    android:background="@drawable/selector_disease"
    android:focusable="true"
    >
    <TextView
        android:id="@+id/tv_deparement_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="呼吸内科"
        android:textSize="20sp"
        android:textColor="#0084fe"
        />
    <TextView
        android:id="@+id/tv_diseases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="20dp"
        android:text="肺气肿、哮喘、风热感冒支气管肺炎、气胸、淹溺中毒、非典、百日咳等"
        android:textSize="16sp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="33dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/img_disease_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/tv_line_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="当前排队人数：3"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

    </LinearLayout>


</LinearLayout>